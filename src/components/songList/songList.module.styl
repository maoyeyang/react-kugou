.list
  width: 100%
  padding-bottom: 4rem
  .listItem
    width: 100%
    height: 3.5rem
    border-bottom: 1px solid #e5e5e5
    position: relative
    display: table
    padding-left: 1rem
    .itemName
      width: 100%
      padding-right: 4rem
      display: table-cell
      vertical-align: middle
      padding-left: 0.5rem
    .downLoad
      position: absolute
      top: 0
      right: 0
      width: 4rem
      height: 100%
      text-align: center
      .iconDownLoad
        background: url('../../assests/images/download_icon_2.png') no-repeat
        width: 1rem
        height: 1rem
        margin-top: 1.25rem
        display: inline-block
        background-size: 100%