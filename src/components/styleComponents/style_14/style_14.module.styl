.style_14
  width: 100%
  padding: 0 0 0 0.5rem
  overflow: hidden
  background: #fff
  .box
    width: 31.5%
    margin-right: 0.3rem
    display: inline-block
    margin-bottom: 0.5rem
    .top
      width: 100%
      margin-bottom: 0.2rem
      position: relative
      .img
        width: 100%
        border-radius: 0.3rem
      .info
        position: absolute
        left: 0
        color: rgba(255, 255, 255, 1)
        font-size: 0.75rem
        bottom: 0
        width: 100%
        height: 2rem
        padding: 0.1rem 0
        line-height: 2rem
        background: -webkit-gradient(linear, 0 0, 0 100%, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.5)))
        border-radius: 0 0 0.3rem 0.3rem
        .iconleft
          background-image: url('../../../assests/images/headset.png')
          background-repeat: no-repeat
          background-size: 100%
          width: 0.7rem
          height: 0.7rem
          display: inline-block
          margin: 0 0.2rem 0.6rem 0.3rem
        .count
          display: inline-block
          width: 3rem
          height: 2rem
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap
        .iconright
          float: right
          margin-right: 0.3rem
          background-image: url('../../../assests/images/play3x.png')
          background-repeat: no-repeat
          background-size: 100%
          width: 1.5rem
          height: 1.5rem
          display: inline-block
    .songname
      font-size: 0.75rem
      color: #333
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      padding-left: 0.5rem
    .singername
      font-size: 0.75rem
      color: #888
      overflow: hidden
      text-overflow: ellipsis
      white-space: nowrap
      padding-left: 0.5rem