.list
  width: 100%
  .listItem
    width: 100%
    border-bottom: 1px solid #e5e5e5
    display: flex
    padding: 0.7rem 0 0.7rem 0.9rem
    .img
      width: 5.5rem
      height: 5.5rem
    .text
      padding-left: 1rem
      flex: 1
      text-align: left
      .name
        font-size: 1rem
        color: #333
        margin-top: 1rem
      .count
        color: #9b9b9b
        font-size: 0.7857rem
        .iconMusic
          width: 0.7rem
          height: 0.7rem
          margin-right: 0.3rem
          margin-top: 0.3rem
          display: inline-block
          background: url('../../assests/images/icon_music.png') center no-repeat
          background-size: 100%
    .icon
      width: 2.3rem
      height: 5.5rem
      margin-right: 0.3rem
      display: inline-block
      background: url('../../assests/images/arrow_icon.png') center no-repeat
