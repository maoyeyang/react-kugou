.header
  width: 100%
  height: 3rem
  text-align: center
  position: fixed
  top: 0
  left: 0
  color: #fff
  background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0))
  z-index: 3
  &.true
    color: #000
    background: #fff
    box-shadow: 0 0.1785rem 0.1785rem 0 #f4f4f4
  .left
    position: absolute
    top: 0
    left: 0
    width: 2.2rem
    height: 3rem
    .iconGoBack
      width: 0.9rem
      height: 1.5rem
      margin-top: 0.7rem
      display: inline-block
      background: url('../../assests/images/goback_1.png') no-repeat
      &.true
        background-size: 100%
        width: 1rem
        height: 2.2rem
        margin-top: 0.4rem
        display: inline-block
        background-position: center center
        background: url('../../assests/images/goback.png') no-repeat
  .text
    height: 3rem
    line-height: 3rem
    font-size: 1rem