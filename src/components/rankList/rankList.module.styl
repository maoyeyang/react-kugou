.list
  width: 100%
  .listItem
    width: 100%
    border-bottom: 1px solid #e5e5e5
    display: flex
    padding: 0.7rem 0 0.7rem 0.9rem
    .img
      width: 5.5rem
      height: 5.5rem
    .text
      line-height: 5.5rem
      padding-left: 1.3rem
      font-size: 1.1rem
      flex: 1
      text-align: left
      color: #333
    .icon
      width: 2.3rem
      height: 5.5rem
      margin-right: 0.3rem
      display: inline-block
      background: url('../../assests/images/arrow_icon.png') center no-repeat
