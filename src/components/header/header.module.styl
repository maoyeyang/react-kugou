.header
  width: 100%
  height: 3rem
  line-height: 3rem
  background: #2ca2f9
  position: fixed
  top: 0
  left: 0
  z-index: 3
  .logo
    width: 7rem
    height: 1.7rem
    display: inline-block
    vertical-align: middle
    margin-left: 0.8rem
    background: url('../../assests/images/logo.png') no-repeat
    background-size: 100%
  .button
    display: inline-block
    width: 6rem
    height: 1.8rem
    line-height: 1.8rem
    margin-left: 0.8rem
    border: 1px solid #fff
    border-radius: 0.35rem
    text-align: center
    color: #fff
    font-size: 0.85rem
  .btnSearch
    width: 1.3rem
    height: 1.3rem
    background: url('../../assests/images/search.png') no-repeat
    background-size: 100%
    position: absolute
    top: 0.8rem
    right: 1rem
    cursor: pointer