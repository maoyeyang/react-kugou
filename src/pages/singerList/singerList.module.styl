.singerList
  width: 100%
  height: 100vh
  padding-top: 3rem
  &.play
    padding-bottom: 4rem
  .scrollStyle
    width: 100%
    height: 100%
    overflow: hidden
  .item
    padding: 0.8rem 0 0.8rem 1.2rem
    display: flex
    border-bottom: 1px solid #e5e5e5
    .img
      flex: 0 0 3.4rem
      height: 3.4rem
    .name
      flex: 1
      margin-left: 1rem
      font-size: 1.1rem
      line-height: 3.4rem
      color: #333
