.singerClass
  width: 100%
  height: 100vh
  padding-top: 6rem
  &.play
    padding-bottom: 4rem
  .scrollStyle
    width: 100%
    height: 100%
    overflow: hidden
    .div
      overflow: hidden
      .ul
        margin: 1.2rem 1rem
        background: #fbfbfb
        border: 1px solid #e4e4e4
        border-radius: 5px
        .li
          padding: 0.7143rem
          display: flex
          font-size: 1rem
          color: #333
          border-top: 1px solid #e4e4e4
          &:first-child
            border-top: none
          .classname
            flex: 1
          .icon
            background: url('../../assests/images/arrow_icon.png') no-repeat
            display: inline-block
            background-size: 100%
            flex: 0 0 0.6rem
            height: 1rem