.rankInfo
  width: 100%
  height: 100vh
  &.play
    padding-bottom: 4rem
  .top
    width: 100%
    .img
      width: 100%
      height: 15rem
      object-fit: cover
    .box
      width: 100%
      height: 2.58rem
      overflow: hidden
      padding: 0.3rem 0.8rem
      display: flex
      transition: all 0.3s linear
      box-shadow: 0 0.1785rem 0.1785rem 0 #f4f4f4
      &.true
        height: auto
      .text
        flex: 1
        font-size: 1rem
        line-height: 1.8rem
      .icon
        background: url('../../assests/images/close_icon.png') no-repeat
        background-size: 1.4rem 1.4rem
        background-position: center center
        display: inline-block
        flex: 0 0 2rem
        height: 2rem
        transition: all 0.3s linear
        &.true
          transform: rotate(180deg)
  .scrollStyle
    width: 100%
    height: 100%
    overflow: hidden
